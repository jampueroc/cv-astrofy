---
const { title, img, desc, url, badge, tags } = Astro.props;
import { Image } from "astro:assets";

const tag_url = url ? url.split("/").slice(0, -1).join("/") + "/tag" : null;
---

<div class="hero-content flex-col md:flex-row">
  {
    img && (
      <Image
        src={img}
        width={750}
        height={422}
        format="webp"
        alt={title}
        class="max-w-full md:max-w-[13rem] rounded-lg"
      />
    )
  }
  <div class="grow w-full">
    <h1 class="text-xl font-bold">
      {title}
      {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
    </h1>
    <p class="py-1 text-1xl">{desc}</p>
    {
      tags && tag_url && (
        <div class="card-actions justify-end">
          {tags.map((tag) => (
            <a href={`${tag_url}/${tag}`} class="badge badge-outline">
              {tag}
            </a>
          ))}
        </div>
      )
    }
  </div>
</div>
