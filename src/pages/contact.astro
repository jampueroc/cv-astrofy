---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout sideBarActiveItemID="contact" title="Contacto">
  <section class="w-full p-6">
    <h1 class="text-2xl font-bold mb-4 text-center">Formulario de Contacto</h1>
    <iframe
      data-tally-src="https://tally.so/embed/wLapz1?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1"
      loading="lazy"
      width="100%"
      frameborder="0"
      marginheight="0"
      marginwidth="0"
      class="max-w-[600px] lg:w-[50vw] w-full"
      title="Contact form
  "></iframe>
  </section>

  <script>
    var d = document,
      w = "https://tally.so/widgets/embed.js",
      v = function () {
        "undefined" != typeof Tally
          ? Tally.loadEmbeds()
          : d
              .querySelectorAll("iframe[data-tally-src]:not([src])")
              .forEach(function (e) {
                e.src = e.dataset.tallySrc;
              });
      };
    if ("undefined" != typeof Tally) v();
    else if (d.querySelector('script[src="' + w + '"]') == null) {
      var s = d.createElement("script");
      (s.src = w), (s.onload = v), (s.onerror = v), d.body.appendChild(s);
    }
  </script>
</BaseLayout>
